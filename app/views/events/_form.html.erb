<%= form_for([@location, @event], html: {class:"form-horizontal"}) do |f| %>

<div class="form-group row">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :date %>
    </div>
    <div class="col-md-4">
      <%= f.date_field :date, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group row">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :requires_id, 'Requires Id' %>
    </div>
    <div class="col-md-4">
      <%= f.check_box :requires_id %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <% if @event.description == nil %>
      <%= f.submit "Create Event", class:"btn btn-primary"%>
      <% else %>
      <%= f.submit "Update Event", class:"btn btn-primary"%>
      <%= link_to 'Cancel', location_path(@location), class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>


<% end %>
