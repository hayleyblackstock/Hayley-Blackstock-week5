<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Create a Location', new_location_path, :class=>"btn btn-primary" %>
  </div>
  <h1>Locations</h1>
</div>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Zip Code </th>
      </tr>
    </thead>

    <tbody>
      <% @locations.each do |location| %>
      <tr>
        <td> <%= link_to location.name, location %> </td>
        <td> <%= location.address %> </td>
        <td> <%= location.zip_code %> </td>
        <td class="text-right">
          <%= link_to 'Edit', edit_location_path(location), :class => "btn btn-primary" %>
          <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
